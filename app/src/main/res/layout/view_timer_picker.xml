<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_time_picker"
    android:layout_width="260dp"
    android:layout_height="150dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/ll_choose_time"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_24"
        android:background="@drawable/shape_time_selector_status"
        >

        <TextView
            android:id="@+id/tv_calendar"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textStyle="normal"
            android:textColor="#4c93fd"
            android:textSize="@dimen/dp_12"
            android:text="2018年09月11日 12:12"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            />

        <ImageView
            android:id="@+id/iv_calendar"
            android:src="@mipmap/ic_calendar"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_timer_picker"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:visibility="gone"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:orientation="horizontal"
            android:background="#ffffff">

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="61dp"
                android:layout_marginStart="@dimen/dp_5"
                android:background="@drawable/shape_detail_timer_choose"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_height="@dimen/dp_25"
                        android:layout_width="45dp"
                        android:textStyle="normal"
                        android:textColor="#4d4d4d"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="2016"
                        android:layout_gravity="center_vertical"
                        />

                    <View
                        android:layout_height="@dimen/dp_1"
                        android:layout_width="45dp"
                        android:layout_gravity="center_horizontal"
                        android:background="#4c93fd"
                        />

                    <TextView
                        android:layout_height="@dimen/dp_25"
                        android:layout_width="45dp"
                        android:textStyle="normal"
                        android:textColor="#4c93fd"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="2017"
                        android:layout_gravity="center_vertical"
                        />

                    <View
                        android:layout_height="@dimen/dp_1"
                        android:layout_width="45dp"
                        android:layout_gravity="center_horizontal"
                        android:background="#4c93fd" />

                    <TextView
                        android:layout_height="@dimen/dp_25"
                        android:layout_width="45dp"
                        android:textStyle="normal"
                        android:textColor="#4d4d4d"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="2018"
                        android:layout_gravity="center_vertical"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_height="match_parent"
                android:layout_width="45dp"
                android:background="@drawable/shape_detail_timer_choose"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_height="@dimen/dp_25"
                        android:layout_width="@dimen/dp_25"
                        android:textStyle="normal"
                        android:textColor="#4d4d4d"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="01"
                        android:layout_gravity="center_vertical"
                        />

                    <View
                        android:layout_height="@dimen/dp_1"
                        android:layout_width="@dimen/dp_25"
                        android:layout_gravity="center_horizontal"
                        android:background="#4c93fd"
                        />

                    <TextView
                        android:layout_height="@dimen/dp_25"
                        android:layout_width="@dimen/dp_25"
                        android:textStyle="normal"
                        android:textColor="#4c93fd"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="02"
                        android:layout_gravity="center_vertical"
                        />

                    <View
                        android:layout_height="@dimen/dp_1"
                        android:layout_width="@dimen/dp_25"
                        android:layout_gravity="center_horizontal"
                        android:background="#4c93fd" />

                    <TextView
                        android:layout_height="@dimen/dp_25"
                        android:layout_width="@dimen/dp_25"
                        android:textStyle="normal"
                        android:textColor="#4d4d4d"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:text="03"
                        android:layout_gravity="center_vertical"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_height="match_parent"
                android:layout_width="45dp"
                android:background="@drawable/shape_detail_timer_choose"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_day_choose"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_75"
                        />

                    <View
                        android:layout_height="@dimen/dp_1"
                        android:layout_width="@dimen/dp_25"
                        android:layout_gravity="center_horizontal"
                        android:background="#4c93fd"
                        android:layout_marginTop="@dimen/dp_25"
                        />

                    <View
                        android:layout_height="@dimen/dp_1"
                        android:layout_width="@dimen/dp_25"
                        android:layout_gravity="center_horizontal"
                        android:background="#4c93fd"
                        android:layout_marginTop="51dp"
                        />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_height="match_parent"
                android:layout_width="45dp"
                android:background="@drawable/shape_detail_timer_choose"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_time_choose"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_75"
                        />

                    <View
                        android:layout_height="@dimen/dp_1"
                        android:layout_width="@dimen/dp_25"
                        android:layout_gravity="center_horizontal"
                        android:background="#4c93fd"
                        android:layout_marginTop="@dimen/dp_25"
                        />

                    <View
                        android:layout_height="@dimen/dp_1"
                        android:layout_width="@dimen/dp_25"
                        android:layout_gravity="center_horizontal"
                        android:background="#4c93fd"
                        android:layout_marginTop="51dp"
                        />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_height="match_parent"
                android:layout_width="45dp"
                android:background="@drawable/shape_detail_timer_choose"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_minute_choose"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_75"
                        />

                    <View
                        android:layout_height="@dimen/dp_1"
                        android:layout_width="@dimen/dp_25"
                        android:layout_gravity="center_horizontal"
                        android:background="#4c93fd"
                        android:layout_marginTop="@dimen/dp_25"
                        />

                    <View
                        android:layout_height="@dimen/dp_1"
                        android:layout_width="@dimen/dp_25"
                        android:layout_gravity="center_horizontal"
                        android:background="#4c93fd"
                        android:layout_marginTop="51dp"
                        />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_choose_time_cancel"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_24"
                android:textSize="12sp"
                android:textStyle="normal"
                android:text="取消"
                android:gravity="center"
                android:textColor="#4c93fd"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_10"
                />

            <TextView
                android:id="@+id/tv_choose_time_config"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_24"
                android:textSize="12sp"
                android:textStyle="normal"
                android:text="确认"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_marginLeft="@dimen/dp_85"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/shape_small_button"
                />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>