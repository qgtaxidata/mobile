<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/search_out_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择查看路径的出租车"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="@color/black_color"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/choose_taxi_recyclerv"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/choose_taxi_cancel"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:layout_marginStart="@dimen/dp_20"
            android:background="@drawable/search_in_bg"
            android:textColor="@color/black_color"
            android:textStyle="normal"
            android:textSize="16sp"
            android:text="@string/cancel"/>

        <Button
            android:id="@+id/choose_taxi_sure"
            android:layout_width="@dimen/dp_80"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_30"
            android:background="@drawable/search_in_bg"
            android:textColor="@color/black_color"
            android:textStyle="normal"
            android:textSize="16sp"
            android:text="@string/sure"/>

    </RelativeLayout>

</LinearLayout>