<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customAttr="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:background="@drawable/search_out_bg">

    <ImageView
        android:id="@+id/search_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ui_hotspot_search_return"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="100dp"
        android:background="@drawable/shape_layout__radius_search"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginStart="25dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">

            <RelativeLayout
                android:id= "@+id/ll_hotspot_origin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_alignParentTop="true"
                android:descendantFocusability="blocksDescendants"
                android:layout_gravity="center_vertical">

                <View
                    android:id="@+id/include_img_start_point"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/start_point_bg"/>

                <TextView
                    android:id="@+id/search_origin"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:scrollbars="horizontal"
                    android:singleLine="true"
                    android:visibility="gone"
                    />
                <com.example.taxidata.widget.MarqueeTextView
                    android:id="@+id/tv_hotspot_set_origin"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="请点击此处设置您的起点"
                    android:textSize="20sp"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:visibility="visible"/>


            </RelativeLayout>

            <View
                android:id="@+id/view_hotspot_divide"
                android:layout_width="200dp"
                android:layout_height="2dp"
                android:layout_marginStart="20dp"
                android:layout_alignLeft="@id/ll_hotspot_origin"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/widget_divide_gray" />

            <RelativeLayout
                android:id="@+id/ll_hotspot_hotspot"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/ll_hotspot_origin"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp">

                <View
                    android:id="@+id/include_img_end_point"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/end_point_bg" />

                <com.example.taxidata.widget.MarqueeTextView
                    android:id="@+id/search_end_point"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:text="您的目的地"
                    android:textSize="20sp"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:visibility="visible"
                    />
            </RelativeLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/search_switch_start_end"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginStart="20dp"/>

    </LinearLayout>

</LinearLayout>