<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context=".ui.areaanalyze.AreaAnalyzeActivity"
    android:background="@color/search_out_bg">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <com.example.taxidata.widget.DropDownSelectView
            android:id="@+id/area_analyze_area_select_view"
            android:layout_width="77dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            />

        <com.example.taxidata.widget.DropDownSelectView
            android:id="@+id/area_analyze_time_select_view"
            android:layout_width="165dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/area_analyze_btn_refresh_list"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:background="@drawable/shape_button_radius_search"
            android:text="刷新"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="@color/search_out_bg"/>

    </LinearLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/area_analyze_vp"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="50dp">

    </androidx.viewpager.widget.ViewPager>

</LinearLayout>