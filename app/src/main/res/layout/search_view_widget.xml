<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="370dp"
    android:layout_height="120dp"
    android:background="@drawable/search_out_bg">

    <ImageView
        android:id="@+id/search_back"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@color/search_in_bg"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginStart="30dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_gravity="center_vertical">

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/start_point_bg"/>

                <EditText
                    android:id="@+id/search_start_point"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:hint="请输入起点"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp">

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/end_point_bg"/>

                <EditText
                    android:id="@+id/search_end_point"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:hint="请输入终点"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/search_switch_start_end"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"/>

    </LinearLayout>

</LinearLayout>