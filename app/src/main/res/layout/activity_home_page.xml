<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.amap.api.maps.MapView
        android:id="@+id/mv_home_page"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        />

    <RelativeLayout
        android:id="@+id/rl_heat_power_switch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        android:background="@android:color/transparent"
        android:visibility="gone"
        >

        <com.example.taxidata.widget.DropDownSelectView
            android:id="@+id/dsv_algorithm"
            android:layout_height="@dimen/dp_24"
            android:layout_width="77dp"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:visibility="gone"/>

        <com.example.taxidata.widget.StatusBar
            android:id="@+id/stb_heat_power"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="50dp"
            />

        <com.example.taxidata.widget.DropDownSelectView
            android:id="@+id/dsv_area_heat_power"
            android:layout_width="77dp"
            android:layout_height="24dp"
            android:layout_below="@id/stb_heat_power"
            android:layout_alignRight="@id/stb_heat_power"
            android:text="番禺区"
            android:layout_marginTop="@dimen/dp_20"
            />

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_show_hide_heat_power"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_24"
                android:textStyle="normal"
                android:textSize="12sp"
                android:text="显示"
                android:background="@drawable/shape_small_button"
                android:textColor="#ffffff"
                android:layout_marginLeft="@dimen/dp_15"
                />

            <com.example.taxidata.widget.MyTimerPicker
                android:id="@+id/tp_home_page_time_picker"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>

    </RelativeLayout>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fam_home_page_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|right"
        android:padding="@dimen/dp_30"
        app:fab_colorPressed="@android:color/holo_orange_light"
        app:menu_backgroundColor="#cce6e6e6"
        app:menu_icon="@mipmap/ic_receive"
        app:menu_labels_textColor="#4C93FD"
        >

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fbtn_passenger_hot"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_passenger_hot"
            app:fab_size="mini"
            app:fab_label="载客热点推荐"
            app:fab_colorPressed="@android:color/holo_orange_light"
            app:fab_colorNormal="@android:color/transparent"
            app:fab_showShadow="true"
            app:fab_shadowColor="@android:color/transparent"
            app:fab_shadowRadius="4dp"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fbtn_heat_power"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_heat_power"
            app:fab_size="mini"
            app:fab_label="热力图模式"
            app:fab_colorNormal="@android:color/transparent"
            app:fab_colorPressed="@android:color/holo_orange_light"
            app:fab_showShadow="true"
            app:fab_shadowColor="@android:color/transparent"
            app:fab_shadowRadius="4dp"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fbtn_road_quality"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_road_quality"
            app:fab_size="mini"
            app:fab_colorPressed="@android:color/holo_orange_light"
            app:fab_label="道路质量分析"
            app:fab_colorNormal="@android:color/transparent"
            app:fab_showShadow="true"
            app:fab_shadowColor="@android:color/transparent"
            app:fab_shadowRadius="4dp"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fbtn_request_analysis"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_request_analysis"
            app:fab_colorPressed="@android:color/holo_orange_light"
            app:fab_size="mini"
            app:fab_label="出租车需求量分析预测"
            app:fab_colorNormal="@android:color/transparent"
            app:fab_showShadow="true"
            app:fab_shadowColor="@android:color/transparent"
            app:fab_shadowRadius="4dp"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fbtn_taxi_income"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_income"
            app:fab_colorPressed="@android:color/holo_orange_light"
            app:fab_size="mini"
            app:fab_label="出租车司机收入排行榜"
            app:fab_colorNormal="@android:color/transparent"
            app:fab_showShadow="true"
            app:fab_shadowColor="@android:color/transparent"
            app:fab_shadowRadius="4dp"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fbtn_behavior_analysis"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_behavior_analysis"
            app:fab_colorPressed="@android:color/holo_orange_light"
            app:fab_size="mini"
            app:fab_label="出租车输入分析与预测"
            app:fab_colorNormal="@android:color/transparent"
            app:fab_showShadow="true"
            app:fab_shadowColor="@android:color/transparent"
            app:fab_shadowRadius="4dp"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fbtn_abnormal_analysis"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_abnormal_analysis"
            app:fab_colorPressed="@android:color/holo_orange_light"
            app:fab_size="mini"
            app:fab_label="出租车异常情况分析"
            app:fab_colorNormal="@android:color/transparent"
            app:fab_showShadow="true"
            app:fab_shadowColor="@android:color/transparent"
            app:fab_shadowRadius="4dp"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fbtn_visualization"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_visualization"
            app:fab_colorPressed="@android:color/holo_orange_light"
            app:fab_size="mini"
            app:fab_label="路径可视化"
            app:fab_colorNormal="@android:color/transparent"
            app:fab_showShadow="true"
            app:fab_shadowColor="@android:color/transparent"
            app:fab_shadowRadius="4dp"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fbtn_set_up"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_set_up"
            app:fab_size="mini"
            app:fab_label="设置"
            app:fab_colorNormal="@android:color/transparent"
            app:fab_colorPressed="@android:color/holo_orange_light"
            app:fab_showShadow="true"
            app:fab_shadowColor="@android:color/transparent"
            app:fab_shadowRadius="4dp"
            />

    </com.github.clans.fab.FloatingActionMenu>

    <include
        android:id="@+id/search_chosen"
        layout="@layout/view_search_widget"
        android:visibility="gone"/>



</RelativeLayout>