<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.amap.api.maps.MapView
        android:id="@+id/mv_home_page"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        />

    <RelativeLayout
        android:id="@+id/rl_heat_power_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:visibility="gone"
        >

        <com.example.taxidata.widget.DropDownSelectView
            android:id="@+id/dsv_algorithm"
            android:layout_height="@dimen/dp_24"
            android:layout_width="77dp"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_below="@+id/dsv_area_heat_power"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_85"
            android:layout_marginTop="@dimen/dp_20"
            android:visibility="gone"
            />

        <com.example.taxidata.widget.StatusBar
            android:id="@+id/stb_heat_power"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="50dp"
            />

        <com.example.taxidata.widget.DropDownSelectView
            android:id="@+id/dsv_area_heat_power"
            android:layout_width="77dp"
            android:layout_height="24dp"
            android:layout_below="@id/stb_heat_power"
            android:layout_alignRight="@id/stb_heat_power"
            android:text="番禺区"
            android:layout_marginTop="@dimen/dp_20"
            />

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_show_hide_heat_power"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_24"
                android:textStyle="normal"
                android:textSize="14sp"
                android:text="显示"
                android:background="@drawable/shape_small_button"
                android:textColor="#ffffff"
                android:layout_marginLeft="@dimen/dp_15"
                />

            <com.example.taxidata.widget.MyTimerPicker
                android:id="@+id/tp_home_page_time_picker"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>

    </RelativeLayout>

    <com.nightonke.boommenu.BoomMenuButton
        android:id="@+id/buttom_menu_homepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        app:bmb_boomInWholeScreen="true"
        app:bmb_normalColor="#4c93fd"
        app:bmb_draggable="true"
        app:bmb_buttonRadius="35dp"
        app:bmb_dotRadius="5dp"
        app:bmb_shareLineWidth="3dp"
        app:bmb_sharedLineLength="30dp"
        app:bmb_pieceInclinedMargin="15dp"
        app:bmb_shareLine1Color="#FFFFFF"
        app:bmb_shareLine2Color="#FFFFFF"
        app:bmb_buttonEnum="textOutsideCircle"
        app:bmb_piecePlaceEnum="piecePlace_share"
        app:bmb_buttonPlaceEnum="buttonPlace_custom"
        />

    <include
        android:id="@+id/search_chosen"
        layout="@layout/view_search_widget"
        android:visibility="gone"/>

</RelativeLayout>