<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:andriod="http://schemas.android.com/apk/res/android"
    andriod:layout_height="match_parent"
    andriod:layout_width="match_parent">

    <com.github.mikephil.charting.charts.BarChart
        andriod:id="@+id/bc_ad_recommend"
        andriod:layout_width="370dp"
        andriod:layout_height="600dp"
        andriod:layout_centerInParent="true"
        />

    <TextView
        andriod:layout_width="wrap_content"
        andriod:layout_height="wrap_content"
        andriod:layout_marginBottom="20dp"
        andriod:layout_above="@id/bc_ad_recommend"
        andriod:layout_centerHorizontal="true"
        andriod:text="广告牌位置对比图表"
        andriod:textSize="18sp"
        andriod:textColor="@color/black_color"
        andriod:textStyle="normal"/>

    <TextView
        andriod:id="@+id/tv_car_rate"
        andriod:layout_width="wrap_content"
        andriod:layout_height="wrap_content"
        andriod:textColor="@color/black_color"
        andriod:textStyle="normal"
        andriod:layout_alignLeft="@id/bc_ad_recommend"
        andriod:textSize="10sp"
        andriod:layout_below="@id/bc_ad_recommend"
        andriod:layout_marginTop="20dp"
        andriod:text="车流量：经过该位置的车辆数目"
        />

    <TextView
        andriod:layout_width="wrap_content"
        andriod:layout_height="wrap_content"
        andriod:textColor="@color/black_color"
        andriod:textStyle="normal"
        andriod:layout_alignLeft="@id/bc_ad_recommend"
        andriod:textSize="10sp"
        andriod:layout_below="@id/tv_car_rate"
        andriod:layout_marginTop="5dp"
        andriod:text="抵达率：车流量中抵达该位置的车辆比例"
        />
</RelativeLayout>