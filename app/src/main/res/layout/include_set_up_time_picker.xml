<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_marginTop="13dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_24"
        android:background="@drawable/shape_time_selector_status"
        >

        <TextView
            android:id="@+id/tv_set_up_calendar"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textStyle="normal"
            android:textSize="@dimen/dp_12"
            android:text="2017年02月04日 01:01:00"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:textColor="#4c93fd"
            />

        <ImageView
            android:id="@+id/iv_set_up_calendar"
            android:src="@mipmap/ic_calendar"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        >

        <LinearLayout
            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:orientation="horizontal"
            android:background="#ffffff">

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="61dp"
                android:layout_marginStart="@dimen/dp_5"
                android:background="@drawable/shape_detail_timer_choose"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_height="@dimen/dp_25"
                        android:layout_width="45dp"
                        android:textStyle="normal"
                        android:textColor="#4d4d4d"
                        android:textSize="12sp"
                        android:gravity="left|center_vertical"
                        android:text="2016"
                        android:layout_gravity="center_vertical"
                        />

                    <View
                        android:layout_height="@dimen/dp_1"
                        android:layout_width="45dp"
                        android:layout_gravity="center_horizontal"
                        android:background="#4c93fd"
                        />

                    <LinearLayout
                        android:layout_height="@dimen/dp_25"
                        android:layout_width="45dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textStyle="normal"
                            android:textSize="12sp"
                            android:text="2017"
                            android:layout_gravity="center_vertical"
                            android:textColor="#4d4d4d"
                            android:gravity="left|center_vertical"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:textSize="12sp"
                            android:text="年"
                            android:gravity="left|center_vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="3dp"
                            android:textColor="#4c93fd"
                            />

                    </LinearLayout>

                    <View
                        android:layout_height="@dimen/dp_1"
                        android:layout_width="45dp"
                        android:layout_gravity="center_horizontal"
                        android:background="#4c93fd" />

                    <TextView
                        android:layout_height="@dimen/dp_25"
                        android:layout_width="45dp"
                        android:textStyle="normal"
                        android:textColor="#4d4d4d"
                        android:textSize="12sp"
                        android:gravity="left|center_vertical"
                        android:text="2018"
                        android:layout_gravity="center_vertical"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_height="match_parent"
                android:layout_width="45dp"
                android:background="@drawable/shape_detail_timer_choose"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_height="@dimen/dp_25"
                        android:layout_width="@dimen/dp_25"
                        android:textStyle="normal"
                        android:textColor="#4d4d4d"
                        android:textSize="12sp"
                        android:text="01"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|center_vertical"
                        />

                    <View
                        android:layout_height="@dimen/dp_1"
                        android:layout_width="@dimen/dp_25"
                        android:layout_gravity="center_horizontal"
                        android:background="#4c93fd"
                        />
                    <LinearLayout
                        android:layout_height="@dimen/dp_25"
                        android:layout_width="25dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textStyle="normal"
                            android:textSize="12sp"
                            android:text="02"
                            android:layout_gravity="center_vertical"
                            android:textColor="#4d4d4d"
                            android:gravity="left|center_vertical"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:textSize="12sp"
                            android:text="月"
                            android:gravity="left|center_vertical"
                            android:layout_gravity="center_vertical"
                            android:textColor="#4c93fd"
                            />

                    </LinearLayout>

                    <View
                        android:layout_height="@dimen/dp_1"
                        android:layout_width="@dimen/dp_25"
                        android:layout_gravity="center_horizontal"
                        android:background="#4c93fd" />

                    <TextView
                        android:layout_height="@dimen/dp_25"
                        android:layout_width="@dimen/dp_25"
                        android:textStyle="normal"
                        android:textColor="#4d4d4d"
                        android:textSize="12sp"
                        android:gravity="left|center_vertical"
                        android:text="03"
                        android:layout_gravity="center_vertical"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_height="match_parent"
                android:layout_width="45dp"
                android:background="@drawable/shape_detail_timer_choose"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_set_up_choose_day"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_75"
                        android:gravity="left|center_vertical"
                        />

                    <View
                        android:layout_height="@dimen/dp_1"
                        android:layout_width="@dimen/dp_25"
                        android:layout_gravity="center_horizontal"
                        android:background="#4c93fd"
                        android:layout_marginTop="@dimen/dp_25"
                        />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textStyle="normal"
                        android:textSize="12sp"
                        android:textColor="#4c93fd"
                        android:text="日"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp" />

                    <View
                        android:layout_height="@dimen/dp_1"
                        android:layout_width="@dimen/dp_25"
                        android:layout_gravity="center_horizontal"
                        android:background="#4c93fd"
                        android:layout_marginTop="51dp"
                        />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_height="match_parent"
                android:layout_width="45dp"
                android:background="@drawable/shape_detail_timer_choose"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_set_up_choose_hour"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_75"
                        />

                    <View
                        android:layout_height="@dimen/dp_1"
                        android:layout_width="@dimen/dp_25"
                        android:layout_gravity="center_horizontal"
                        android:background="#4c93fd"
                        android:layout_marginTop="@dimen/dp_25"
                        />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textStyle="normal"
                        android:textSize="12sp"
                        android:textColor="#4c93fd"
                        android:text="时"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp" />

                    <View
                        android:layout_height="@dimen/dp_1"
                        android:layout_width="@dimen/dp_25"
                        android:layout_gravity="center_horizontal"
                        android:background="#4c93fd"
                        android:layout_marginTop="51dp"
                        />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_height="match_parent"
                android:layout_width="45dp"
                android:background="@drawable/shape_detail_timer_choose"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_set_up_choose_minute"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_75"
                        />

                    <View
                        android:layout_height="@dimen/dp_1"
                        android:layout_width="@dimen/dp_25"
                        android:layout_gravity="center_horizontal"
                        android:background="#4c93fd"
                        android:layout_marginTop="@dimen/dp_25"
                        />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textStyle="normal"
                        android:textSize="12sp"
                        android:textColor="#4c93fd"
                        android:text="分"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp" />

                    <View
                        android:layout_height="@dimen/dp_1"
                        android:layout_width="@dimen/dp_25"
                        android:layout_gravity="center_horizontal"
                        android:background="#4c93fd"
                        android:layout_marginTop="51dp"
                        />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>